<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:padding="5dp">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/total_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Elapsed Game Time:"
			android:textSize="20sp"
			/>
		<Chronometer
			android:id="@+id/game_timer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="5dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:background="#FFFFFF"
			android:textColor="#000000"
			android:textSize="80sp"
			/>
		<Button
			android:id="@+id/pause_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="-5dp"
			android:layout_marginRight="-5dp"
			android:text="Pause"
			android:clickable="false"
			/>
	</LinearLayout>
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		/>
	<LinearLayout
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Running Stats:"
			android:textSize="20sp"
			/>
		<TextView
			android:id="@+id/running_stats"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Total Wins: 0"
			/>
	</LinearLayout>
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		/>
	<LinearLayout
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="25sp">
		<Button
			android:id="@+id/round_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="End Round"
			android:clickable="false"
			/>
		<Button
			android:id="@+id/game_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Start Game"
			/>
		<Button
			android:id="@+id/help_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Instructions"
			/>
	</LinearLayout>
</LinearLayout>
